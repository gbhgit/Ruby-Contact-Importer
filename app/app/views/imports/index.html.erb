<h1>Home Page</h1>
<% if logged? %>
    <%= link_to "logout", {:controller=> "sessions", :action=> "destroy"}, :method => :delete%>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <h1>Imports</h1>

    <table>
      <thead>
        <tr>
          <th>File</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @imports.each do |import| %>
        <tr>
          <td><%= import.file.filename.to_s %></td>
          <td><%= import.status %></td>
          <% if import.logs.empty? %>
            <td>No errors</td>
          <% else %>
            <td><%= link_to 'Failed registers', logs_path(import) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
    </table>

    <br>

    <%= link_to 'New Import', new_import_path %>
<% end %>

